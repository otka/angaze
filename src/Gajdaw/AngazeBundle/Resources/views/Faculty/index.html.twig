{% extends "GajdawAngazeBundle::layout.html.twig" %}
{% block contents %}
    <h1>Faculty list</h1>

    <table class="records_list">
        <!--<thead>

        </thead>-->
        <tbody>

        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>

        {% for entity in entities %}

        <tr>
            <td><a href="{{ path('faculty_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>
                <ul>
                    {% for d in entity.department %}
                            <li><a href="{{ path('department_show', { 'id': d.id }) }}"> {{ d.name }} </a></li>
                    {% endfor %}
                </ul>
            </td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('faculty_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('faculty_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>

        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('faculty_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>

    {% endblock %}
